# Vocal Agent Environment Configuration
# Copy this file to .env and fill in your actual API keys and credentials

# ====== AI/ML API Keys ======
# Google Gemini API Key for natural language processing
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API Key for speech-to-text processing
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ====== Google Services ======
# Google Calendar API credentials
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id_here
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8080/callback

# Gmail API credentials (can reuse Calendar credentials)
GMAIL_CLIENT_ID=your_google_client_id_here
GMAIL_CLIENT_SECRET=your_google_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:8080/gmail/callback

# ====== Spotify Integration ======
# Spotify Web API credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8080/spotify/callback

# ====== Fetch.ai uAgents Configuration ======
# Agent network configuration
AGENT_NETWORK=testnet  # or mainnet
AGENT_SEED_PHRASE=your_agent_seed_phrase_here

# uAgent addresses (generated after first run)
VOCAL_CORE_AGENT_ADDRESS=
CALENDAR_AGENT_ADDRESS=
EMAIL_AGENT_ADDRESS=
NOTES_AGENT_ADDRESS=
SPOTIFY_AGENT_ADDRESS=

# ====== Application Configuration ======
# Base URL for the backend API
API_BASE_URL=http://localhost:8000

# Frontend configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ====== Development Settings ======
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database configuration (if using one)
DATABASE_URL=sqlite:///./vocal_agent.db

# Redis configuration (for caching, if using)
REDIS_URL=redis://localhost:6379

# ====== Security ======
# JWT secret for session management
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API rate limiting
RATE_LIMIT_PER_MINUTE=100

# ====== Agent-specific Settings ======
# Calendar agent settings
CALENDAR_DEFAULT_DURATION_MINUTES=60
CALENDAR_TIMEZONE=America/New_York

# Email agent settings
EMAIL_SIGNATURE="\n\nSent via Vocal Agent"
EMAIL_MAX_ATTACHMENTS=5

# Notes agent settings
NOTES_STORAGE_PATH=./data/notes
NOTES_MAX_SIZE_MB=10

# Spotify agent settings
SPOTIFY_DEFAULT_DEVICE=
SPOTIFY_DEFAULT_VOLUME=50

# ====== Voice Processing ======
# Speech recognition settings
SPEECH_LANGUAGE=en-US
SPEECH_CONFIDENCE_THRESHOLD=0.8

# Text-to-speech settings (for responses)
TTS_VOICE=alloy
TTS_SPEED=1.0